@model Driver

@{
    ViewData["Title"] = "Driver Details";
}

<h2>Driver Details</h2>

<div>
    <h4>Driver</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Driver Name
        </dt>
        <dd class="col-sm-10">
            @Model.DriverName
        </dd>
        <dt class="col-sm-2">
            Car Registration
        </dt>
        <dd class="col-sm-10">
            @Model.CarReg
        </dd>
        <dt class="col-sm-2">
            Note Date
        </dt>
        <dd class="col-sm-10">
            @Model.NoteDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Note Description
        </dt>
        <dd class="col-sm-10">
            @Model.NoteDescription
        </dd>
        <dt class="col-sm-2">
            Responsible Employee
        </dt>
        <dd class="col-sm-10">
            @Model.ResponsibleEmployee
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DriverID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

