@model Event

@{
    ViewData["Title"] = "Add Event";
}

<h2>Add Event</h2>

<form asp-action="AddEvent" method="post">
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventDate" class="control-label"></label>
        <input asp-for="EventDate" class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AmountIn" class="control-label"></label>
        <input asp-for="AmountIn" class="form-control" type="number" />
        <span asp-validation-for="AmountIn" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AmountOut" class="control-label"></label>
        <input asp-for="AmountOut" class="form-control" type="number" />
        <span asp-validation-for="AmountOut" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="DriverID" value="@Model.DriverID" />
    <div class="form-group">
        <input type="submit" value="Add Event" class="btn btn-primary" />
    </div>
</form>




